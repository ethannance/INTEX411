@{
}
@{
    ViewData["Title"] = "Add a New Product";
}

@model Product


<vc:nav-bar-types user="Admin"></vc:nav-bar-types>
<vc:submenu-types view="Default"></vc:submenu-types>

<!-- Icon Divider-->
<div class="divider-custom">
    <div class="divider-custom-line"></div>
    <div class="divider-custom-icon"><img src="~/img/lego brick.png" width="50px" /></div>
    <div class="divider-custom-line"></div>
</div>
<div class="container m-5 p-5">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <!--Adding a product form-->
            <form method="post" asp-controller="Admin" asp-action="ProductsAddAdmin">
                <div class="row">
                    <div class="col-3">
                        <label asp-for="row_ID">Product ID</label>
                        <input type="int" asp-for="row_ID" placeholder="Please choose a number greater than 200" style="width: 50px; border-radius: 5px;" />
                        <input type="int" asp-for="product_ID" hidden />
                    </div>
                    <br />
                </div>
                <br />
                <div class="row">
                    <div class="col-6">
                        <label asp-for="name">Product Name: </label>
                        <input type="text" asp-for="name" style="width: 300px; border-radius: 5px;" />
                    </div>
                    <div class="col-4">
                        <label asp-for="year">Release Year: </label>
                        <input type="int" asp-for="year" style="width: 100px; border-radius: 5px;" />
                    </div>
                    <div class="col-2">
                        <label asp-for="price">Price: </label>
                        <input type="int" asp-for="price" placeholder="ex: 60" style="width: 50px; border-radius: 5px;" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-4">
                        <label asp-for="num_parts">Number of Parts: </label>
                        <input type="int" asp-for="num_parts" style="width: 100px; border-radius: 5px;" />
                    </div>
                    <div class="col-4">
                        <label asp-for="primary_color">Primary Color</label>
                        <select asp-for="primary_color" style="border-radius: 5px;">
                            <option value="" selected>Select a Color</option>
                            <option>Black</option>
                            <option>Blue</option>
                            <option>Brown</option>
                            <option>Green</option>
                            <option>Grey</option>
                            <option>Orange</option>
                            <option>Red</option>
                            <option>Tan</option>
                            <option>White</option>
                            <option>Yellow</option>
                        </select>
                    </div>
                    <div class="col-4">
                        <label asp-for="secondary_color">Secondary Color</label>
                        <select asp-for="secondary_color" style="border-radius: 5px;">
                            <option value="" selected>Select a Color</option>
                            <option>Black</option>
                            <option>Blue</option>
                            <option>Brown</option>
                            <option>Green</option>
                            <option>Grey</option>
                            <option>Orange</option>
                            <option>Red</option>
                            <option>Tan</option>
                            <option>White</option>
                            <option>Yellow</option>
                        </select>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-4">
                        <label asp-for="category">Category</label>
                        <select asp-for="category" style="border-radius: 5px;">
                            <option value="" selected>Select a Category</option>
                            <option>Animal</option>
                            <option>Building</option>
                            <option>Car</option>
                            <option>Character</option>
                            <option>Colorful</option>
                            <option>DC</option>
                            <option>Disney</option>
                            <option>Energy</option>
                            <option>Farm</option>
                            <option>Flight</option>
                            <option>Floral</option>
                            <option>Food</option>
                            <option>Game</option>
                            <option>Harry Potter</option>
                            <option>Minifig</option>
                            <option>Motorbike</option>
                            <option>Part</option>
                            <option>Person</option>
                            <option>Personal</option>
                            <option>Promotional</option>
                            <option>Star Wars</option>
                            <option>Structure</option>
                            <option>Train</option>
                            <option>Vehicle</option>
                        </select>
                    </div>
                    <div class="col-8">
                        <label asp-for="img_link">Link to Image</label>
                        <input type="text" asp-for="img_link" style="width: 465px; border-radius: 5px;" />
                    </div>
                </div>                
                <br />
                <div class="row">
                    <div class="col-12">
                        <label asp-for="description">Description</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <input type="text" asp-for="description" style="width: 875px; height: 150px; border-radius: 5px;" />
                    </div>
                </div>
                <br />
                <br />
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">Add Product</button>
                </div>
                <br />
                <div asp-validation-summary="All"></div>
            </form>
        </div>
    </div>
    
</div>

