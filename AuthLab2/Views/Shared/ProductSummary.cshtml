@{
}

@model Product
<div class="card m-1 p-1">
    <div class="text-center">
        <img src="@Model.img_link" alt="Image" width="150" height="150">
    </div>    
    <h4>
        @Model.name
        <span class="badge rounded-pill bg-primary text-white float-end"><small>Price: $@Model.price.00</small></span>
    </h4>
    <ul>
        <li>Number of Parts: @Model.num_parts</li>
        <li>Year: @Model.year</li>
    </ul>

    <form id="form-@Model.product_ID" method="post" asp-page="/Cart">
        <input type="hidden" name="productId" value="@Model.product_ID" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <button type="submit" class="btn btn-primary btn-sm float-end">Add to Cart</button>
    </form>
</div>
