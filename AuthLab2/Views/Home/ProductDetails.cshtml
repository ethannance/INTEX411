@{
}

@{
    ViewData["Title"] = "Product Details";
}

<vc:nav-bar-types user="Visitor"></vc:nav-bar-types>
<vc:submenu-types view="Default"></vc:submenu-types>

@model Product

<h2>@Model.name</h2>


<div>
    <br />
    <div class="text-center">
        <img src="@Model.img_link" alt="Image" height="100px">
    </div>
    <br />
    <br />
    <br />
    <div class="price-and-button-container">
        <div class="price">
            <h6>$@Model.price.00</h6>
        </div>
    </div>

    <div class="description">
        <p>@Model.description</p>
    </div>
    <div class="num-parts">
        <p>@Model.num_parts</p>
    </div>
    <div class="year">
        <p>@Model.year</p>
    </div>
    <div class="colors">
        <p>@Model.primary_color/@Model.secondary_color</p>
    </div>
    <div class="category">
        <p>@Model.category</p>
    </div>
</div>
