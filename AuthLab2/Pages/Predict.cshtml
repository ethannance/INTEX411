@page
@model AuthLab2.Pages.PredictModel
@{
    ViewData["Title"] = "Fraud Predictions";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div>
        <label asp-for="Order.customer_ID">Customer ID</label>
        <input asp-for="Order.customer_ID" type="number" min="0" value="12345" />
    </div>
    <div>
        <label asp-for="Order.time">Time (24h format)</label>
        <input asp-for="Order.time" type="number" min="0" max="2359" placeholder="15" />
    </div>
    <div>
        <label asp-for="Order.amount">Amount</label>
        <input asp-for="Order.amount" type="number" min="0" step="0.01" value="100.00" />
    </div>
    <div>
        <label asp-for="Order.date">Month of Transaction</label>
        <select asp-for="Order.date">
            <option value="1">January</option>
            <option value="2">February</option>
            <option value="3">March</option>
            <option value="4">April</option>
            <option value="5">May</option>
            <option value="6">June</option>
            <option value="7">July</option>
            <option value="8">August</option>
            <option value="9">September</option>
            <option value="10">October</option>
            <option value="11">November</option>
            <option value="12">December</option>
            <!-- Add options for all months -->
        </select>
    </div>

    <div>
        <label asp-for="Order.entry_mode">Entry Mode</label>
        <select asp-for="Order.entry_mode">
            <option value="PIN" selected>PIN</option>
            <option value="Other">Other</option>
        </select>
    </div>
    <div>
        <label asp-for="Order.country_of_transaction">Country of Transaction</label>
        <input asp-for="Order.country_of_transaction" type="text" value="United Kingdom" />
    </div>
    <div>
        <label asp-for="Customer.country_of_residence">Country of Residence</label>
        <input asp-for="Customer.country_of_residence" type="text" value="United Kingdom" />
    </div>
    <button type="submit">Predict</button>
</form>

@if (Model.Prediction != null)
{
    <h3>Prediction result: @Model.Prediction</h3>
}
