<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AuthLab2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <style>
        /* Additional styles to match the Freelancer theme provided */
        body {
            font-family: 'Montserrat', 'Arial', sans-serif;
            margin-top: 100px; /* Adjust the value to match the height of your navbar */
        }

        #mainNav {
            background-color: #2c3e50; /* This sets the background color */
            padding: 10px;
        }

            #mainNav .navbar-brand {
                color: #fed136; /* This sets the color of the brand/logo */
            }

            #mainNav .navbar-nav .nav-link {
                font-family: 'Lato', 'Arial', sans-serif;
                color: #ffffff; /* This sets the color of the nav links */
            }

        footer.footer {
            background-color: #2c3e50; /* Footer background color */
            color: #ffffff; /* Footer text color */
        }

            footer.footer a {
                color: #fed136; /* Footer link color */
            }
        /* Additional custom styles */
        .masthead {
            background-color: #2c3e50;
            padding: 30px 0;
            color: white;
        }

            .masthead h1 {
                font-size: 2em;
                margin: 0;
            }

            .masthead p {
                font-family: 'Lato', 'Arial', sans-serif;
                font-weight: 400;
                font-style: italic;
            }
        /* Use this for the dividing lines with icons, if needed */
        .divider-custom {
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .divider-custom .divider-custom-line {
                width: 100px;
                height: 1px;
                background-color: #fed136; /* Color of the lines */
                margin: 8px;
            }

            .divider-custom .divider-custom-icon {
                color: #fed136; /* Color of the icon */
            }
    </style>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AuthLab2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm fixed-top" id="mainNav">
            <div class="container">
                <!-- Brand/logo -->
                <a class="navbar-brand" href="#page-top">AuthLab2</a>
                <!-- Toggler/collapsible Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive">
                    <i class="fas fa-bars"></i>
                </button>
                <!-- Navbar links -->
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Secrets">Secrets</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About Me</a>
                        </li>
                        <li class="nav-item">
                            <a asp-page="/Predict" class="nav-link">Predictions</a>
                        </li>
                        <li class="nav-item">
                            <a asp-page="/Cart" class="nav-link">View Cart</a>
                        </li>
                    </ul>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="py-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-center">
        <div class="container">
            &copy; 2024 - AuthLab2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
