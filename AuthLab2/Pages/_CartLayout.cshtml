<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewData["Title"] - Aurora Bricks</title>
    <!-- Bootstrap CSS and Custom CSS from the theme -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <!-- Your additional styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AuthLab2.styles.css" asp-append-version="true" />

</head>
<body id="page-top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg bg-secondary text-uppercase fixed-top" id="mainNav">
        <div class="container">
            <!-- Brand/logo -->
            <div class="col-5">
                <img src="~/img/aurora.jpg" height="50px" style="border-radius: 5px;" />
                <a class="navbar-brand" asp-controller="Customer" asp-action="Index"> | Aurora Bricks</a>
            </div>

            <!-- Navbar links -->
            <div class="navbar col-7" id="navbarResponsive">
                <ul class="navbar-nav ml-auto text-end">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Customer" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Customer" asp-action="ProductsCust">Our Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Customer" asp-action="AboutCust">About Me</a>
                    </li>
                    <li class="nav-item">
                        <a asp-page="/Cart" class="nav-link">View Cart</a>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <div class="masthead text-center">
        <div class="d-flex align-items-center flex-column">
            <!-- Masthead Avatar Image-->
            <img src="~/img/xavi-cabrera-kn-umdzqdjm-unsplash.jpg" alt="Legos" class="masthead-bg" height="200px" width="100%" />
            <!-- Masthead Heading-->
            <h1 class="masthead-heading text-uppercase mb-0">@ViewData["Title"]</h1>
        </div>
    </div>

    @*     <div class="masthead text-center">
    <div class="container d-flex align-items-center flex-column">
    <!-- Masthead Avatar Image-->
    <img src="~/img/xavi-cabrera-kn-umdzqdjm-unsplash.jpg" alt="Legos" class="masthead-bg" height="200px" width="100%" />
    <!-- Masthead Heading-->
    <h1 class="masthead-heading text-uppercase mb-0">@ViewData["Title"]</h1 >
    </div>
    </div>  *@
    <!-- Content -->
    <div class="container-fluid">
        <main role="main" class="pb-3">
            <br />
            <br />
            <br />
            <br />
            <br />
            @RenderBody()
        </main>
    </div>
    <!-- Bootstrap core JS-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/js/scripts.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
<partial name="_CookieConsentPartial" />

<footer>

    <div class="row">
        <div class="copyright py-4 text-white p-4">
            @if (User.Identity.IsAuthenticated)
            {
                // Footer content for authenticated users (customer or admin)
                if (User.IsInRole("Admin"))
                {
                    <p>Copyright &copy; Aurora Bricks 2024 | <a asp-area="" asp-controller="Admin" asp-action="PrivacyAdmin">Privacy Policy</a></p>
                }
                else
                {
                    <p>Copyright &copy; Aurora Bricks 2024 | <a asp-area="" asp-controller="Customer" asp-action="PrivacyCust">Privacy Policy</a></p>
                }
            }
            else
            {
                // Footer content for visitors
                <p>Copyright &copy; Aurora Bricks 2024 | <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a></p>
            }
        </div>
    </div>
</footer>
</html>